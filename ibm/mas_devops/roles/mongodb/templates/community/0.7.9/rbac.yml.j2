---
apiVersion: v1
kind: Namespace
metadata:
  name: "{{ mongodb_namespace }}"
---
# Source: https://github.com/mongodb/mongodb-kubernetes-operator/blob/v0.7.9/config/rbac/role.yaml
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: mongodb-kubernetes-operator
  namespace: "{{ mongodb_namespace }}"
rules:
- apiGroups:
  - ""
  resources:
  - pods
  - services
  - configmaps
  - secrets
  verbs:
  - create
  - delete
  - get
  - list
  - patch
  - update
  - watch
- apiGroups:
  - apps
  resources:
  - statefulsets
  verbs:
  - create
  - delete
  - get
  - list
  - patch
  - update
  - watch
- apiGroups:
  - mongodbcommunity.mongodb.com
  resources:
  - mongodbcommunity
  - mongodbcommunity/status
  - mongodbcommunity/spec
  - mongodbcommunity/finalizers
  verbs:
  - get
  - patch
  - list
  - update
  - watch
---
# Source: https://github.com/mongodb/mongodb-kubernetes-operator/blob/v0.7.8/config/rbac/role_binding.yaml
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: mongodb-kubernetes-operator
  namespace: "{{ mongodb_namespace }}"
subjects:
- kind: ServiceAccount
  name: mongodb-kubernetes-operator
roleRef:
  kind: Role
  name: mongodb-kubernetes-operator
  apiGroup: rbac.authorization.k8s.io
---
# Source: https://github.com/mongodb/mongodb-kubernetes-operator/blob/v0.7.9/config/rbac/service_account.yaml
apiVersion: v1
kind: ServiceAccount
metadata:
  name: mongodb-kubernetes-operator
  namespace: "{{ mongodb_namespace }}"
---
# Source: https://github.com/mongodb/mongodb-kubernetes-operator/blob/v0.7.9/config/rbac/role_database.yaml
kind: Role
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: mongodb-database
  namespace: "{{ mongodb_namespace }}"
rules:
- apiGroups:
  - ""
  resources:
  - secrets
  verbs:
  - get
- apiGroups:
  - ""
  resources:
  - pods
  verbs:
  - patch
  - delete
  - get
---
# Source: https://github.com/mongodb/mongodb-kubernetes-operator/blob/v0.7.9/config/rbac/role_binding_database.yaml
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: mongodb-database
  namespace: "{{ mongodb_namespace }}"
subjects:
- kind: ServiceAccount
  name: mongodb-database
roleRef:
  kind: Role
  name: mongodb-database
  apiGroup: rbac.authorization.k8s.io
---
# Source: https://github.com/mongodb/mongodb-kubernetes-operator/blob/v0.7.9/config/rbac/service_account_database.yaml
apiVersion: v1
kind: ServiceAccount
metadata:
  name: mongodb-database
  namespace: "{{ mongodb_namespace }}"
