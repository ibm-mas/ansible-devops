apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: elasticsearch-le-prod
  namespace: "{{ es_namespace }}"
spec:
  commonName: "{{ es_domain }}"
  dnsNames:
    - "{{ es_domain }}"
  issuerRef:
    kind: Issuer
    name: letsencrypt-prod
  privateKey:
    rotationPolicy: Always
  secretName: elasticsearch-le-prod-tls
  usages:
    - digital signature
    - key encipherment
    - server auth
