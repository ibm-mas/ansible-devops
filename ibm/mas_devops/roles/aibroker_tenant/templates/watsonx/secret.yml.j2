---
kind: Secret
apiVersion: v1
type: Opaque
metadata:
  name: {{ mas_aibroker_watsonxai_secret }}
  namespace: "{{ item }}"
{% if custom_labels is defined and custom_labels.items() %}
  labels:
{% for key, value in custom_labels.items() %}
    "{{ key }}": "{{ value }}"
{% endfor %}
{% endif %}
data:
  WATSONXAI_APIKEY: {{ mas_aibroker_watsonxai_apikey | b64encode }}
  WATSONXAI_PROJECT_ID: {{ mas_aibroker_watsonxai_project_id | b64encode }}
  WATSONXAI_URL: {{ mas_aibroker_watsonxai_url | b64encode }}
