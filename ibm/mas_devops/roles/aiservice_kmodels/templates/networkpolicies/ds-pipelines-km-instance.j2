---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: ds-pipelines-km-instance
  namespace: aiservice-{{ aiservice_instance_id }}
spec:
  podSelector:
    matchLabels:
      app: ds-pipeline-instance
      component: data-science-pipelines
  ingress:
    - ports:
        - protocol: TCP
          port: 8888
      from:
        - podSelector:
            matchLabels:
              app: km-controller
  policyTypes:
    - Ingress
