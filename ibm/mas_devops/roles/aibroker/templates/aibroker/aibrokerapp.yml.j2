---
apiVersion: apps.mas.ibm.com/v1
kind: AiBrokerApp
metadata:
    name: "{{ mas_instance_id }}"
    namespace: "{{ aibroker_namespace }}"
    labels:
        mas.ibm.com/applicationId: aibroker
        mas.ibm.com/instanceId: "{{ mas_instance_id }}"
spec:
    settings:
        icr:
            cp: "{{ mas_icr_cp }}"
            cpopen: "{{ mas_icr_cpopen }}"
        dro:
            url: "{{ drocfg.url }}"
            dro_token_secret: "{{ mas_aibroker_dro_token_secret }}"
            ca: "{{ drocfg.ca }}"
        jdbc:
            url: "{{ jdbccfg.url | b64decode }}"
            credentials_secret: "{{ mas_aibroker_db2_jdbc_secret }}"
            ca: "{{ jdbccfg.ca | b64decode }}"
