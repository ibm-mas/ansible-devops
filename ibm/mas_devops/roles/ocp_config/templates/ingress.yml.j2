---
apiVersion: operator.openshift.io/v1
kind: IngressController
metadata:
  name: {{ ocp_ingress_controller_name }}
  namespace: openshift-ingress-operator
spec:
{% if ocp_ingress_update_timeouts %}
  tuningOptions:
    clientTimeout: "{{ ocp_ingress_client_timeout }}"
    serverTimeout: "{{ ocp_ingress_server_timeout }}"
{% endif %}
{% if ocp_ingress_namespace_ownership is defined and ocp_ingress_namespace_ownership != '' %}
  routeAdmission:
    namespaceOwnership: {{ ocp_ingress_namespace_ownership }}
{% endif %}
