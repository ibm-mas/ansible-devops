apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ minio_instance_name }}"
  namespace: "{{ minio_namespace }}"
spec:
  selector:
    matchLabels:
      app: "{{ minio_instance_name }}"
  template:
    metadata:
      labels:
        app: "{{ minio_instance_name }}"
    spec:
      volumes:
        - name: storage
          persistentVolumeClaim:
            claimName: minio-pvc
        - name: minio-certs
          secret:
            secretName: minio-server-secret
            items:
              - key: public.crt
                path: public.crt
              - key: private.key
                path: private.key
              - key: public.crt
                path: CAs/public.crt
      containers:
        - name: "{{ minio_instance_name }}"
          image: "{{ minio_version }}"
          command:
            - /bin/bash
            - -c
          args:
            - minio server /data --console-address :9443
          env:
            - name: MINIO_ROOT_USER
              value: "{{ minio_root_user }}"
            - name: MINIO_ROOT_PASSWORD
              value: "{{ minio_root_password }}"
          ports:
            - name: https
              containerPort: 443
              protocol: TCP
            - name: console
              containerPort: 9443
              protocol: TCP
          volumeMounts:
            - mountPath: /data
              name: storage
            - mountPath: /root/.minio/certs
              name: minio-certs
