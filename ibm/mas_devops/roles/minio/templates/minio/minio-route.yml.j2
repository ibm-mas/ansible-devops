---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: minio-route
  namespace: "{{ minio_namespace }}"
spec:
  host: "minio-route-minio.{{ cluster_domain }}"
  path: /
  port:
    targetPort: https
  tls:
    termination: reencrypt
    insecureEdgeTerminationPolicy: Redirect
    certificate: |
      {{ externalCertificate | indent(6, False) }}
    key: |
      {{ externalKey | indent(6, False) }}
    caCertificate: |
      {{ externalCACertificate | indent(6, False) }}
  to:
    kind: Service
    name: minio-service