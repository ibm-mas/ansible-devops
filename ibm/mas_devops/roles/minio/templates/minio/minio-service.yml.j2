---
apiVersion: v1
kind: Service
metadata:
  name: minio-service
  namespace: "{{ minio_namespace }}"
spec:
  type: NodePort
  selector:
    app: "{{ minio_instance_name }}"
  ports:
    - name: https
      port: 9000
      targetPort: 9000
      protocol: TCP
    - name: console
      port: 9443
      targetPort: 30901
      protocol: TCP