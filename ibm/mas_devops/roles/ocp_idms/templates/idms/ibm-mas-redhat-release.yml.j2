apiVersion: config.openshift.io/v1
kind: ImageDigestMirrorSet
metadata:
  name: ibm-mas{{ idms_suffix }}-redhat-release
  labels:
    mas.ibm.com/idms: "{{ registry_prefix }}"
spec:
  imageDigestMirrors:
  - mirrors:
    - {{ registry_private_url_with_path }}/openshift/release
    source: quay.io/openshift-release-dev/ocp-v4.0-art-dev
    mirrorSourcePolicy: NeverContactSource
  - mirrors:
    - {{ registry_private_url_with_path }}/openshift/release-images
    source: quay.io/openshift-release-dev/ocp-release
    mirrorSourcePolicy: NeverContactSource
