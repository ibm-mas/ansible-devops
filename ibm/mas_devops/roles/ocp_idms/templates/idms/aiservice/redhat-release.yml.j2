apiVersion: config.openshift.io/v1
kind: ImageDigestMirrorSet
metadata:
  name: aiservice-redhat-release{{ idms_suffix_redhat }}
  labels:
    aiservice.ibm.com/idmsContent: redhat-release
  annotations:
    aiservice.ibm.com/idmsRegistry: "{{ registry_private_url_with_path_redhat }}"
    aiservice.ibm.com/idmsRegistryHost: "{{ registry_private_host }}"
    aiservice.ibm.com/idmsRegistryPort: "{{ registry_private_port }}"
    aiservice.ibm.com/idmsRegistryPrefix: "{{ registry_prefix_redhat}}"
spec:
  imageDigestMirrors:
  - mirrors:
    - {{ registry_private_url_with_path_redhat }}/openshift/release
    source: quay.io/openshift-release-dev/ocp-v4.0-art-dev
    mirrorSourcePolicy: NeverContactSource
  - mirrors:
    - {{ registry_private_url_with_path_redhat }}/openshift/release-images
    source: quay.io/openshift-release-dev/ocp-release
    mirrorSourcePolicy: NeverContactSource
