#!/bin/bash

if db2 list storage access | grep {{ s3_name }}; then
    echo "{{ s3_name }} is available already."
else
    echo "{{ s3_name }} is not available. Creating"
    db2 catalog storage access alias {{ s3_name }} VENDOR S3 server {{ s3_server }} user {{ s3_access_key_id }} password {{ s3_secret_access_key }} container {{ s3_bucket_name }}
fi