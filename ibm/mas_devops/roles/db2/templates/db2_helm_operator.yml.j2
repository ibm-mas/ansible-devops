  name: {{ db2_instance_name }}-db2-operator-metrics-auth-role
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
rules:
- apiGroups:
  - authentication.k8s.io
  resources:
  - tokenreviews
  verbs:
  - create
- apiGroups:
  - authorization.k8s.io
  resources:
  - subjectaccessreviews
  verbs:
  - create
---
# ClusterRole for metrics reader
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{ db2_instance_name }}-db2-operator-metrics-reader
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
rules:
- nonResourceURLs:
  - /metrics
