  name: db2-instance-service-account
  namespace: {{ db2_namespace }}
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
imagePullSecrets:
  - name: ibm-registry
automountServiceAccountToken: true
---
# Service Account for DB2 Operator Controller
apiVersion: v1
kind: ServiceAccount
metadata:
  name: db2-database-operator-controller-manager
  namespace: {{ db2_namespace }}
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
imagePullSecrets:
  - name: ibm-registry
---
# ClusterRole for metrics authentication
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
