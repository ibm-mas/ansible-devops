  - get
  - list
  - watch
  - create
  - update
  - patch
  - delete
---
# ClusterRoleBinding for DB2 Operator Manager
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ db2_instance_name }}-db2-operator-manager-cluster-rolebinding
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ db2_instance_name }}-db2-operator-manager-role
subjects:
- kind: ServiceAccount
  name: db2-database-operator-controller-manager
  namespace: {{ db2_namespace }}
---
# ClusterRoleBinding for metrics authentication
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ db2_instance_name }}-db2-operator-metrics-auth-rolebinding
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ db2_instance_name }}-db2-operator-metrics-auth-role
subjects:
- kind: ServiceAccount
  name: db2-database-operator-controller-manager
  namespace: {{ db2_namespace }}
---
# Role for DB2 Instance
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: db2-instance-role
  namespace: {{ db2_namespace }}
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
rules:
