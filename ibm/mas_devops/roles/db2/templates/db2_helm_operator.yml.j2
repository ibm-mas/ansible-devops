  - get
---
# ClusterRole for DB2 Operator Manager
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{ db2_instance_name }}-db2-operator-manager-role
  labels:
    app.kubernetes.io/name: db2-operator
    app.kubernetes.io/managed-by: Helm
rules:
- apiGroups:
  - ""
