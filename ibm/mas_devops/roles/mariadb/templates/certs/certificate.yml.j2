apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "mariadb-certificate-{{ mariadb_instance_name }}"
  namespace: "{{ mariadb_namespace }}"
spec:
  secretName: "mariadb-certificate-{{ mariadb_instance_name }}"
  duration: "175200h0m0s"
  renewBefore: "2160h0m0s"
  commonName: "mariadb"
  dnsNames:
    - "{{ mariadb_instance_name }}.{{ mariadb_namespace }}.svc.cluster.local"
  usages:
    - cert sign
    - digital signature
    - key encipherment
    - server auth
  issuerRef:
    name: "{{ mariadb_instance_name }}-issuer"
    kind: "Issuer"