---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: mariadb-pvc
  namespace: "{{ mariadb_namespace }}"
  labels:
    app: "{{ mariadb_instance_name }}"
    component: data-science-pipelines
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: "{{ primary_storage_class }}"
  resources:
    requests:
      storage: 20Gi
