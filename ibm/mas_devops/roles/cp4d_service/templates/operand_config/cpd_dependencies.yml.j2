apiVersion: operator.ibm.com/v1alpha1
kind: OperandRegistry
metadata:
  name: ibm-cpd-ccs-registry
  namespace: "{{ cpd_operators_namespace }}"
spec:
  operators:
    - channel: "{{ cpd_components_meta.ccs.sub_channel }}"
