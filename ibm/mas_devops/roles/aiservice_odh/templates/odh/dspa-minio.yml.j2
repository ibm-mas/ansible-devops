    #   pipelineDBName: randomDBName
    #   pvcSize: 20Gi
    #   storageClassName: "{{ primary_storage_class }}"
    #   resources:
    #     requests:
    #       cpu: 300m
    #       memory: 800Mi
    #     limits:
    #       cpu: "1"
    #       memory: 1Gi
    #   passwordSecret:
    #     name: ds-pipeline-s3-instance
    #     key: secretkey
  objectStorage:
    disableHealthCheck: true
    externalStorage:
      host: "{{ aiservice_storage_host }}"
      port: "{{ aiservice_storage_port }}"
      bucket: "{{ aiservice_storage_pipelines_bucket }}"
      storageClassName: "{{ primary_storage_class }}"
      s3CredentialsSecret:
        accessKey: accesskey
        secretKey: secretkey
        secretName: ds-pipeline-s3-instance
      scheme: http
