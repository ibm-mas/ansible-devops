---
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: "ibm-sls-mongo-credentials"
{% if custom_labels is defined and custom_labels.items() %}
  labels:
{% for key, value in custom_labels.items() %}
    "{{ key }}": "{{ value }}"
{% endfor %}
{% endif %}
data:
  username: "{{ mongodb.username | b64encode }}"
  password: "{{ mongodb.password | b64encode }}"
